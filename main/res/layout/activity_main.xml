<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:background="#DABCEC">
        <TextView
                android:layout_width="360dp"
                android:layout_height="103dp" android:id="@+id/result"
                android:layout_marginTop="28dp"
                android:textSize="48sp" android:background="#850E93"/>
        <TableLayout
                android:layout_width="match_parent"
                android:layout_height="824dp">
            <TableRow android:layout_width="match_parent" android:layout_height="186dp">
                <Button
                        android:text="1"
                        android:layout_width="120dp"
                        android:layout_height="100dp" android:id="@+id/button_1" android:textSize="34sp"
                        android:onClick="click_1" android:background="#BF57EA"/>
                <Button
                        android:text="2"
                        android:layout_width="120dp"
                        android:layout_height="100dp" android:id="@+id/button_2" android:textSize="34sp"
                        android:onClick="click_2" android:background="#BF57EA"/>
                <Button
                        android:text="3"
                        android:layout_width="120dp"
                        android:layout_height="100dp" android:id="@+id/button_3" android:textSize="34sp"
                        android:onClick="click_3" android:background="#BF57EA"/>
            </TableRow>
            <TableRow
                    android:layout_width="286dp"
                    android:layout_height="96dp">
                <Button
                        android:text="4"
                        android:layout_width="120dp"
                        android:layout_height="100dp" android:id="@+id/button_4" android:textSize="34sp"
                        android:onClick="click_4" android:background="#BF57EA"/>
                <Button
                        android:text="5"
                        android:layout_width="120dp"
                        android:layout_height="100dp" android:id="@+id/button_5" android:textSize="34sp"
                        android:onClick="click_5" android:background="#BF57EA"/>
                <Button
                        android:text="6"
                        android:layout_width="120dp"
                        android:layout_height="100dp" android:id="@+id/button_6" android:textSize="34sp"
                        android:onClick="click_6" android:background="#BF57EA"/>
            </TableRow>
            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <Button
                        android:text="7"
                        android:layout_width="120dp"
                        android:layout_height="100dp" android:id="@+id/buttona_7" android:textSize="34sp"
                        android:onClick="click_7" android:background="#BF57EA"/>
                <Button
                        android:text="8"
                        android:layout_width="120dp"
                        android:layout_height="100dp" android:id="@+id/button_8" android:textSize="34sp"
                        android:onClick="click_8" android:background="#BF57EA"/>
                <Button
                        android:text="9"
                        android:layout_width="120dp"
                        android:layout_height="100dp" android:id="@+id/button_9" android:textSize="34sp"
                        android:onClick="click_9" android:background="#BF57EA"/>
            </TableRow>
            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <Button
                        android:text="+"
                        android:layout_width="120dp"
                        android:layout_height="100dp" android:id="@+id/button_minus" android:textSize="34sp"
                        android:background="#BF57EA" android:onClick="click_plus"/>
                <Button
                        android:text="-"
                        android:layout_width="120dp"
                        android:layout_height="100dp" android:id="@+id/button_plus" android:textSize="34sp"
                        android:background="#BF57EA" android:onClick="click_minus"/>
                <Button
                        android:text="="
                        android:layout_width="120dp"
                        android:layout_height="100dp" android:id="@+id/button_equals" android:textSize="34sp"
                        android:background="#BF57EA" android:onClick="click_equals"/>
            </TableRow>
            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <Button
                        android:text="Clear"
                        android:layout_width="120dp"
                        android:layout_height="100dp" android:id="@+id/button_del" android:textSize="24sp"
                        android:onClick="click_del"/>
            </TableRow>
        </TableLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>